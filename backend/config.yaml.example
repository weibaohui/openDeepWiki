# openDeepWiki 配置文件
# 
# LLM 配置支持从环境变量自动获取（优先级高于配置文件）：
#   - OPENAI_API_KEY    -> llm.api_key
#   - OPENAI_BASE_URL   -> llm.api_url
#   - OPENAI_MODEL_NAME -> llm.model

server:
  port: "8080"
  mode: "debug"  # debug or release

database:
  type: "sqlite"  # sqlite or mysql
  dsn: "./data/app.db"

llm:
  # 以下配置可通过环境变量覆盖
  api_url: "https://api.openai.com/v1"
  api_key: ""  # 推荐使用环境变量 OPENAI_API_KEY
  model: "gpt-4o"
  max_tokens: 4096

github:
  token: ""  # optional, for private repositories

data:
  dir: "./data"
  repo_dir: "./data/repos"
