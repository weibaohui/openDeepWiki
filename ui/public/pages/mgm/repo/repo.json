{
    "type": "page",
    "title": "代码仓库管理",
    "body": [
        {
            "type": "crud",
            "api": "/mgm/repo/list",
            "quickSaveItemApi": "/mgm/repo/save/id/${id}",
            "bulkActions": [
                {
                    "label": "批量删除",
                    "actionType": "ajax",
                    "confirmText": "确定要批量删除?",
                    "api": {
                        "url": "/mgm/repo/delete/${ids}",
                        "method": "post",
                        "data": {
                            "ids": "${selectedItems | pick:id }"
                        }
                    }
                }
            ],
            "headerToolbar": [
                "reload",
                "bulkActions",
                {
                    "type": "button",
                    "label": "新增仓库",
                    "icon": "fa fa-plus",
                    "actionType": "dialog",
                    "dialog": {
                        "title": "新增仓库",
                        "body": {
                            "type": "form",
                            "api": "/mgm/repo/save",
                            "body": [
                                {
                                    "type": "input-text",
                                    "name": "name",
                                    "label": "仓库名称",
                                    "required": true
                                },
                                {
                                    "type": "input-text",
                                    "name": "description",
                                    "label": "描述"
                                },
                                {
                                    "type": "input-text",
                                    "name": "repo_type",
                                    "label": "仓库类型",
                                    "required": true
                                },
                                {
                                    "type": "input-text",
                                    "name": "url",
                                    "label": "仓库地址",
                                    "required": true
                                },
                                {
                                    "type": "input-text",
                                    "name": "branch",
                                    "label": "默认分支"
                                }
                            ]
                        }
                    }
                }
            ],
            "columns": [
                {
                    "type": "operation",
                    "label": "操作",
                    "buttons": [
                        {
                            "type": "button",
                            "label": "更新仓库",
                            "actionType": "ajax",
                            "api": "post:/doc/repo/${id}/init",
                            "confirmText": "确定要更新仓库吗？"
                        },
                        {
                            "type": "button",
                            "label": "AI解读",
                            "actionType": "ajax",
                            "api": "post:/doc/repo/${id}/analysis",
                            "confirmText": "确定要进行AI解读吗？"
                        },
                        {
                            "type": "button",
                            "label": "解读历史",
                            "actionType": "drawer",
                            "drawer": {
                                "size": "xl",
                                "closeOnEsc": true,
                                "closeOnOutside": true,
                                "title": "查看解读历史",
                                "body": [
                                    {
                                        "headerToolbar": [
                                            "reload"
                                        ],
                                        "type": "crud",
                                        "api": {
                                            "method": "get",
                                            "url": "/doc/repo/${id}/analysis/history"
                                        },
                                        "columns": [
                                            {
                                                "type": "operation",
                                                "label": "操作",
                                                "buttons": [
                                                    {
                                                        "type": "button",
                                                        "label": "日志",
                                                        "actionType": "drawer",
                                                        "drawer": {
                                                            "size": "xl",
                                                            "closeOnEsc": true,
                                                            "closeOnOutside": true,
                                                            "title": "查看运行日志",
                                                            "body": [
                                                                {
                                                                    "type": "sseLogDisplay",
                                                                    "url": "/doc/analysis/${id}/logs"
                                                                }
                                                            ]
                                                        }
                                                    }
                                                ]
                                            },
                                            {
                                                "name": "id",
                                                "label": "ID"
                                            },
                                            {
                                                "name": "status",
                                                "label": "状态",
                                                "type": "mapping",
                                                "map": {
                                                    "pending": "待处理",
                                                    "running": "进行中",
                                                    "completed": "已完成",
                                                    "failed": "失败"
                                                },
                                                "labelMap": {
                                                    "pending": "warning",
                                                    "running": "info",
                                                    "completed": "success",
                                                    "failed": "danger"
                                                }
                                            },
                                            {
                                                "name": "startTime",
                                                "label": "开始时间",
                                                "type": "datetime"
                                            },
                                            {
                                                "name": "endTime",
                                                "label": "结束时间",
                                                "type": "datetime"
                                            },
                                            {
                                                "name": "result",
                                                "label": "结果概述",
                                                "type": "tpl"
                                            },
                                            {
                                                "name": "errorMsg",
                                                "label": "错误信息",
                                                "type": "tpl"
                                            },
                                            {
                                                "type": "operation",
                                                "label": "操作",
                                                "buttons": [
                                                    {
                                                        "type": "button",
                                                        "label": "查看结果文档",
                                                        "actionType": "dialog",
                                                        "dialog": {
                                                            "title": "分析结果文档",
                                                            "size": "lg",
                                                            "body": {
                                                                "type": "crud",
                                                                "api": {
                                                                    "method": "get",
                                                                    "url": "/api/doc/repo/analysis/${id}/results"
                                                                },
                                                                "columns": [
                                                                    {
                                                                        "name": "documentType",
                                                                        "label": "文档类型"
                                                                    },
                                                                    {
                                                                        "name": "content",
                                                                        "label": "文档内容",
                                                                        "type": "markdown"
                                                                    },
                                                                    {
                                                                        "name": "createdAt",
                                                                        "label": "创建时间",
                                                                        "type": "datetime"
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "name",
                    "label": "仓库名称"
                },
                {
                    "name": "description",
                    "label": "描述"
                },
                {
                    "name": "repo_type",
                    "label": "类型"
                },
                {
                    "name": "url",
                    "label": "地址"
                },
                {
                    "name": "branch",
                    "label": "分支"
                },
                {
                    "type": "operation",
                    "label": "操作",
                    "buttons": [
                        {
                            "type": "button",
                            "label": "编辑",
                            "actionType": "dialog",
                            "dialog": {
                                "title": "编辑仓库",
                                "body": {
                                    "type": "form",
                                    "api": "/mgm/repo/save",
                                    "body": [
                                        {
                                            "type": "hidden",
                                            "name": "id"
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "name",
                                            "label": "仓库名称",
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "description",
                                            "label": "描述"
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "repo_type",
                                            "label": "仓库类型",
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "url",
                                            "label": "仓库地址",
                                            "required": true
                                        },
                                        {
                                            "type": "input-text",
                                            "name": "branch",
                                            "label": "默认分支"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}